<Window x:Class="ClientTelegram.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientTelegram"
        mc:Ignorable="d"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        Title="LoginWindow" Height="400" Width="450">

    <Grid Margin="20">
        <TextBlock Text="Login an account"
                   FontSize="24" FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,30" />

        <TextBlock Text="Login, using nickname"
                   FontSize="14"
                   Foreground="#1EA1F2"
                   Margin="55,80,0,0"
                   VerticalAlignment="Top" />

        <Border Width="300" Height="35"
        CornerRadius="6"
        Background="#333333"
        BorderBrush="#444444"
        BorderThickness="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="0,110,0,0">
            <TextBox x:Name="NameTextBox"
             Background="Transparent" 
             Foreground="White"
             BorderThickness="0"
             FontSize="14"
             VerticalContentAlignment="Center"
             Padding="10,0" />
        </Border>


        <TextBlock Text="Password"
                   FontSize="14"
                   Foreground="White"
                   Margin="55,160,0,0"
                   VerticalAlignment="Top" />


        <Border Width="300" Height="35"
        CornerRadius="6"
        Background="#333333"
        BorderBrush="#444444"
        BorderThickness="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="0,190,0,0">
            <PasswordBox x:Name="PasswordTextBox"
             Background="Transparent" 
             Foreground="White"
             BorderThickness="0"
             FontSize="14"
             VerticalContentAlignment="Center"
             Padding="10,0" />  
        </Border>

        <CheckBox Content="Remember me"
                  Foreground="White"
                  FontSize="14"
                  Margin="55,240,0,0"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left" />

        <Button Content="Login"
        Width="200" Height="40"
        VerticalAlignment="Top"
        Margin="0,280,0,0"
        HorizontalAlignment="Center"
        FontSize="16"
        FontWeight="Bold"
        Foreground="White"
        BorderThickness="0"
        Click="LoginButton_Click"
        Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="6">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="Blue" Offset="1" />
                                <GradientStop Color="DodgerBlue" Offset="0" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBlock Text="Register"
                   FontSize="14"
                   Foreground="#1EA1F2"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"
                   Cursor="Hand" 
                   TextDecorations="Underline"
                   MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
    </Grid>
</Window>
